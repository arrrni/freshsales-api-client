{
    "name": "arrrni/freshsales-api-client",
    "description": "API client for Freshsales.io",
    "type": "library",
    "license": "GNU",
    "authors": [
        {
            "name": "Artur Szymczyk",
            "email": "arturszymczyk1@gmail.com"
        }
    ],
    "keywords": [
        "arrrni",
        "freshsales",
        "freshsales.io",
        "freshsales api"
    ],
    "config": {
        "sort-packages": true
    },
    "autoload" : {
        "psr-4" : {
            "Arrrni\\FreshsalesAPI\\" : "src"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Arrrni\\FreshsalesAPI\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "psr/http-message": "^1.0.1",
        "php-http/message-factory": "^1.0.2",
        "php-http/discovery": "^1.6.1",
        "php-http/guzzle6-adapter": "^1.1.1",
        "php-http/httplug": "^1.1",
        "php-http/httplug-pack": "^1.1"
    },
    "require-dev": {
        "ext-curl": "*",
        "php-http/mock-client": "^1.3",
        "php-http/message": "^1.7",
        "phpmetrics/phpmetrics": "^2.4",
        "phpunit/phpunit": "^8.1",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/var-dumper": "^4.2"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "code-analyse": "phpmetrics --report-html=\"./report\" ."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
